@model ultimateorganiser.Models.Club

@{
    ViewBag.Title = "DeleteConfirmed";
}

<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="lead">Are you sure you want to delete @Model.ClubName ?</div>
        </div>
        <div class="panel-body">

            <fieldset>
                <legend>Details Of Club</legend>
                <div>
                    @Html.DisplayFor(model => model.ClubName)<br />
                    @Html.DisplayFor(model => model.ClubDescription)<br />
                    @*@Html.DisplayFor(model => model.ClubImage)*@
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    }
                </div>
            </fieldset>
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn-primary" href="@Url.Action("Index")">
                <span class="glyphicon glyphicon-home"></span>&nbsp;Back to List
            </a>
        </div>
    </div>
</div>



