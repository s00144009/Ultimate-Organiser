@model ultimateorganiser.Models.Club



@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Club</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClubName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClubName)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.ClubDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClubDescription)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.ClubImage)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClubImage)
            </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.ClubMembers)
        </dt>

        <dd>
            <div class="row">
                @foreach (var member in Model.ClubMembers)
            {
                    <div class="col-md-2 col-sm-6 col-xs-6">
                        <div class="panel panel-default">
                            <div class="panel-body">

                                <h4>@member.UserFName.Substring(0, Math.Min(member.UserFName.Length, 20))</h4>
                                <h4>@member.UserLName.Substring(0, Math.Min(member.UserLName.Length, 20))</h4>
                                <p>@member.UserDescription.Substring(0, Math.Min(member.UserDescription.Length, 25))...</p>
                            </div>
                            <div class="panel-footer">@member.UserName</div>
                        </div>
                    </div>
                }
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClubID }) |
    @Html.ActionLink("Back to List", "Index")
</p>






